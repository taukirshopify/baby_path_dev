              <a class="logo-991" href="{{ routes.root_url }}"><img src="{{ section.settings.header_logo_mobile | img_url: 'master' }}" alt="Logo"></a> 
          </div> 
          <div class="mobile-menu fast-mobile-menu"> 
              <div class="remove-one mobile-remove-one"><i class="fal fa-times"></i></div> 
              <ul class="fast-header-menu">  

                  <li class="dropdown"><a class="menu-item" href="index.html">ALL <i class="fal fa-angle-down"></i></a>
                      <ul class="dropdown-pges-ul dropdown-menu"> 
                          <li><a href="javascprit:void(0)">protection v1</a></li>
                          <li><a href="javascprit:void(0)">protection v2</a></li> 
                      </ul>
                  </li>  
                  <li><a class="menu-item" href="javascprit:void(0)">ACCESSORIES</a></li> 
                  <li><a class="menu-item" href="javascprit:void(0)">SHIRTS</a></li>
