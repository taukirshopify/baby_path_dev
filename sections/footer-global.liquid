                            <a href="{{ settings.social_vimeo_link }}" class="link list-social__link" >
                            {%- render 'icon-vimeo' -%}
                            <span class="visually-hidden">{{ general.social.links.vimeo }}</span>
                            </a>
                        </li>
                        {%- endif -%}
                    </ul>
                {%- endif -%}
                
                <!-- footer help & more -->
                <ul class="cl-start-wrap help-571">
                    <li class="cl-item f-help-m">
                        <div class="cl-label-wrap">
                            <span class="cl-label-title">{{ section.settings.footer_first_menu_title }}</span> 
                            <span class="cl-label-tools">
                                <a href="javascprit:void(0)"><i class="fa fa-plus"></i></a>
                            </span>
                        </div>
                        <ul class="ftps-ul">
                            <li class="cl-item">
                                <div class="cl-label-wrap">
                                    {% for link in section.settings.footer_first_menu.links %}
                                        <a href="{{ link.url }}" class="cl-label-title ftps-a">{{ link.title }}</a>
                                    {% endfor %}
                                </div> 
                            </li> 
                        </ul>
                    </li> 
                    <li class="cl-item f-help-m">
                        <div class="cl-label-wrap">
                            <span class="cl-label-title">{{ section.settings.footer_second_menu_title }}</span> 
                            <span class="cl-label-tools">
                                <a href="javascprit:void(0)"><i class="fa fa-plus"></i></a>
                            </span>
                        </div>
                        <ul class="ftps-ul">
                            <li class="cl-item">
                                <div class="cl-label-wrap">
                                    {% for link in section.settings.footer_second_menu.links %}
                                        <a href="{{ link.url }}" class="cl-label-title ftps-a">{{ link.title }}</a>
                                    {% endfor %}
                                </div> 
                            </li> 
                        </ul>
                    </li>
                </ul>
            </div> 
            <div class="footer-help-item f-item-one">
                <h3>{{ section.settings.footer_second_menu_title }}</h3>
                <ul>
                    {% for link in section.settings.footer_second_menu.links %}
