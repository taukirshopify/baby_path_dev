<!-- footer-area strat--> 
<section class="footer-area">
    <div class="footer-container">
        <div class="fooetr-top-items">
            <div class="footer-help-item f-item-one">
                <h3>{{ section.settings.footer_first_menu_title }}</h3>
                <ul>
                    {% for link in section.settings.footer_first_menu.links %}
                        <li>
                            <a href="{{ link.url }}" class="cl-label-title ftps-a">{{ link.title }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="footer-help-item">
                {%- if section.settings.show_newsletter -%}
                <h3>{{ section.settings.newsletter_title }}</h3>
                <p>{{ section.settings.newsletter_text }}</p>

                {%- form 'customer', id: 'ContactFooter', class: 'subscribe_form footer-form' -%}
                    <input type="hidden" name="contact[tags]" value="newsletter">
                    <div class="input-group">
                        <input
                          id="NewsletterForm--{{ section.id }}"
                          type="email"
                          name="contact[email]"
                          class="form-control"
                          value="{{ form.email }}"
                          aria-required="true"
                          autocorrect="off"
                          autocapitalize="off"
                          autocomplete="email"
                          {% if form.errors %}
                            autofocus
                            aria-invalid="true"
                            aria-describedby="ContactFooter-error"
                          {% elsif form.posted_successfully? %}
                            aria-describedby="ContactFooter-success"
                          {% endif %}
                          placeholder="Your Email"
                          required
                        >
                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-default" name="commit" id="Subscribe" aria-label="newsletter">
                                <img src="{{  'right arrow 2.svg' | asset_url }}" alt="">
                            </button>
                        </span>
                    </div>
                    <div class="form_extra">
                      {%- if form.errors -%}
                        <small class="newsletter-form__message form__message" id="ContactFooter-error">{% render 'icon-error' %}{{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}</small>
                      {%- endif -%}
                    {%- if form.posted_successfully? -%}
                      <h3 class="newsletter-form__message newsletter-form__message--success form__message" id="ContactFooter-success" tabindex="-1" autofocus>{% render 'icon-success' %}{{ newsletter.success }}</h3>
                    {%- endif -%}
                    </div>
                  {%- endform -%}
                <small>{{ section.settings.newsletter_subscribe_text }}</small>
                <h4 class="sb-text">{{ section.settings.newsletter_sms_text }}</h4>
                <small>
                    {{ section.settings.newsletter_footer_text }}
                </small>
                {%- endif -%}
                {%- if section.settings.show_social -%}
                    <ul class="footer-socil-item" role="list">
                        {%- if settings.social_twitter_link != blank -%}
                        <li>
                            <a href="{{ settings.social_twitter_link }}" class="link list-social__link" >
                            {%- render 'icon-twitter' -%}
                            <span class="visually-hidden">{{ general.social.links.twitter }}</span>
                            </a>
                        </li>
                        {%- endif -%}
                        {%- if settings.social_facebook_link != blank -%}
                        <li>
                            <a href="{{ settings.social_facebook_link }}" class="link list-social__link" >
                            {%- render 'icon-facebook' -%}
                            <span class="visually-hidden">{{ general.social.links.facebook }}</span>
                            </a>
                        </li>
                        {%- endif -%}
                        {%- if settings.social_pinterest_link != blank -%}
                        <li>
                            <a href="{{ settings.social_pinterest_link }}" class="link list-social__link" >
                            {%- render 'icon-pinterest' -%}
                            <span class="visually-hidden">{{ general.social.links.pinterest }}</span>
                            </a>
                        </li>
                        {%- endif -%}
                        {%- if settings.social_instagram_link != blank -%}
                        <li>
                            <a href="{{ settings.social_instagram_link }}" class="link list-social__link" >
                            {%- render 'icon-instagram' -%}
                            <span class="visually-hidden">{{ general.social.links.instagram }}</span>
                            </a>
                        </li>
                        {%- endif -%}
                        {%- if settings.social_tiktok_link != blank -%}
                        <li>
                            <a href="{{ settings.social_tiktok_link }}" class="link list-social__link" >
                            {%- render 'icon-tiktok' -%}
                            <span class="visually-hidden">{{ general.social.links.tiktok }}</span>
                            </a>
                        </li>
                        {%- endif -%}
                        {%- if settings.social_tumblr_link != blank -%}
                        <li>
                            <a href="{{ settings.social_tumblr_link }}" class="link list-social__link" >
                            {%- render 'icon-tumblr' -%}
                            <span class="visually-hidden">{{ general.social.links.tumblr }}</span>
                            </a>
                        </li>
                        {%- endif -%}
                        {%- if settings.social_snapchat_link != blank -%}
                        <li>
                            <a href="{{ settings.social_snapchat_link }}" class="link list-social__link" >
                            {%- render 'icon-snapchat' -%}
                            <span class="visually-hidden">{{ general.social.links.snapchat }}</span>
                            </a>
                        </li>
                        {%- endif -%}
                        {%- if settings.social_youtube_link != blank -%}
