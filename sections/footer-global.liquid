                            <a href="{{ link.url }}" class="cl-label-title ftps-a">{{ link.title }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        <div class="footer-bottom">
            <ul class="header-sigin-btn footer-cuntry"> 
                <li class="currency-switcher-li f-cs-li">  
                    <div class="currency-switcher">
                        <div class="dropdown">
                          <div class="caption">
                            <div class="n-flag">
                                <img src="{{'flag.svg' | asset_url }}" alt="">
                            </div> 
                                USA
                          </div>
                          <div class="list">
                            <div class="item selected" data-item="RUB">
                                <div class="n-flag">
                                    <img src="{{'flag.svg' | asset_url }}" alt="">
                                </div>  
                                    USA
                            </div>
                            <div class="item" data-item="RUB">
                                <div class="n-flag">
                                    <img src="{{'flag.svg' | asset_url }}" alt="">
                                </div>
                              Россия
                              <!-- <span>RUB</span> -->
                            </div>
                            <div class="item" data-item="UAH">
                                <div class="n-flag">
                                    <img src="{{'flag.svg' | asset_url }}" alt="">
                                </div>
                              Украина
                              <!-- <span>UAH</span> -->
                            </div>
                            <div class="item" data-item="USD">
                                <div class="n-flag">
                                    <img src="{{'flag.svg' | asset_url }}" alt="">
                                </div>
                            Россия
                            </div>
                          </div>
                        </div>
                    </div>
                </li>  
            </ul>
            <ul class="footer-bottom-act">
                {% for link in section.settings.footer_privacy_menu.links %}
                    <li>
                        <a href="{{ link.url }}">{{ link.title }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</section>

