 <!-- justin-area strAT --> 
 <section class="product-area product-one">
    <div class="product-container">
        <ul class="product-title nav nav-tabs">
            {% for block in section.blocks %}  
            <li><a class="product-toggle {% if forloop.index == 1 %}active {% endif %}" data-bs-toggle="tab" data-bs-target="#nav-tab{{ forloop.index }}" type="button" role="tab" aria-controls="nav-home" aria-selected="{% if forloop.index == 1 %}true {% else %} false{% endif %}"  href="#nav-tab{{ forloop.index }}">{{ block.settings.tab_name }}</a></li>
            {% endfor %}
        </ul>
        <div class="tab-content">
            {% for block in section.blocks %}  
            <div class="splide product-slider {% if forloop.index == 1 %}tab-pane active {% else %} tab-pane fade {% endif %}" id="nav-tab{{ forloop.index }}">
                <div class="splide__track">
                    <ul class="splide__list">
                        {% for product in collections[block.settings.tab_collection].products %}
                          <li class="splide__slide">
                            <a class="product-items" href="{{ product.url }}">
                              <div class="product_image_wrapper">
                                <img
                                class="product-item-img firstImage"
                                src="{{ product.featured_image | img_url: 'medium' }}"
                                alt="{{ product.title }}">
                                {% if product.images[1] %}
                                <img class="product-item-img secondImage" src="{{ product.images[1] | product_img_url: 'medium' }}" alt="{{ product.title }}">
                              {% endif %}
                              </div>
                              <div class="product-item-p-text">
                                <form method="post" action="/cart/add" class="add_to_cart_form">
                                  <input type="hidden" name="id" value="{{ product.variants.first.id }}" />
                                  <input type="submit" class="addcart__buttonwrap theme-btn shape-btn bg-black" value="Add to cart" />
                                </form> 
                                <p class="product-item-text">{{ product.title }}</p>
                                <p class="product-item-text product_price">
                                  {% if product.compare_at_price > product.price %}
                                  <span class="sale-price">{{ product.price | money }}</span>
                                  <span class="regular-price compare_at_price"><del>{{ product.compare_at_price | money }}</del></span>
                                  {% else %}
                                    <span class="regular-price">{{ product.price | money }}</span>
                                  {% endif %}
                                </p>
                              </div>
                            </a>
                          </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            {% endfor %}
        </div>
        
    </div>
</section> 
<!-- justin-area end -->
